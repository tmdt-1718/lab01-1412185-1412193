<!DOCTYPE html>
<html>
    <head>
        <title>Webalbums</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body class="fadeBackGround">

        <div class="wapper">
            <div class="header">

                <%= render "devise/navigation/menu" %>
                <% if checkURL %>
                <div class="header-content">
                      <div class="inner">
                          <h2>What's The White Albums ?</h2>
                          <h5 class="wow fadeIn text-normal" style="visibility: visible; animation-name: fadeIn;">Take Your Feeling in each picture</h5>
                          <h6 class="wow fadeIn text-normal" style="visibility: visible; animation-name: fadeIn;">Where you can share for people</h6>
                          <hr>
                      </div>
                </div>
                <% end %>
            </div>
            <div class="body-content">
                <div class="container">
                  <p class="notice"><%= notice %></p>
                  <p class="alert"><%= alert %></p>
                  <div class="row">
                    <div class="col-md-4">

                        <!-- Search Widget -->
                        <div class="card my-4">
                            <h5 class="card-header">Search</h5>
                            <div class="card-body">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search for...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-secondary" type="button">Go</button>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Categories Widget -->
                        <div class="card my-4">
                            <h5 class="card-header">Tag Albums</h5>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <ul class="list-unstyled mb-0">
                                            <li>
                                                <a href="#">Family</a>
                                            </li>
                                            <li>
                                                <a href="#">Anime</a>
                                            </li>
                                            <li>
                                                <a href="#">Happyness</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-lg-6">
                                        <ul class="list-unstyled mb-0">
                                            <li>
                                                <a href="#">Wedding</a>
                                            </li>
                                            <li>
                                                <a href="#">Animal</a>
                                            </li>
                                            <li>
                                                <a href="#">Couple</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Side Widget -->
                        <div class="card my-4">
                            <h5 class="card-header">Side Widget</h5>
                            <div class="card-body">
                                You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                            </div>
                        </div>
                    </div>
                    <% if checkURL %>
                    <div class="col-md-8">

                        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                          <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                          </ol>
                          <div class="carousel-inner">
                            <div class="carousel-item active">
                              <img class="d-block w-100" src="https://photo2.tinhte.vn/data/attachment-files/2017/09/4140883_H-iflytek.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                              <img class="d-block w-100" src="https://photo2.tinhte.vn/data/attachment-files/2017/10/4146108_H_Sony_Xperia_XZ1_tinhte.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                              <img class="d-block w-100" src="https://photo2.tinhte.vn/data/attachment-files/2017/10/4146809_DSC_2586.jpg" alt="Third slide">
                            </div>
                          </div>
                          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                          </a>
                          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                          </a>
                        </div>

                        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                          <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                          </ol>
                          <div class="carousel-inner">
                            <div class="carousel-item active">
                              <img class="d-block w-100" src="https://photo2.tinhte.vn/data/attachment-files/2017/10/4146150_CV.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                              <img class="d-block w-100" src="https://photo2.tinhte.vn/data/attachment-files/2017/10/4146299_H.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                              <img class="d-block w-100" src="https://photo2.tinhte.vn/data/attachment-files/2017/10/4146050_H.jpg" alt="Third slide">
                            </div>
                          </div>
                          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                          </a>
                          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                          </a>
                        </div>
                    </div>
                    <div class="col-md-12">
                      <%= yield %>
                    </div>
                    <% else %>
                    <div class="col-md-8">
                      <% flash.each do |key, value| %>
                      	<div class="alert <%= flash_class(key) %> alert-dismissible fade show" role="alert">
                      	  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      	    <span aria-hidden="true">&times;</span>
                      	  </button>
                      	  <%= value %>
                      	</div>
                      <% end %>
                      <%= yield %>
                    </div>
                    <% end %>
                  </div>
                </div>
            </div>
            <div class="footers">
                <footer id="footer" class="footerBG">
                    <div class="container">
                        <div class="row">
                            <div class="col-6 col-sm-3">
                                <h6 class="text-uppercase">
                                    <b>More</b>
                                </h6>
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="#" title="Free themes">
                                            <i class="fa fa-pencil fa-1x" aria-hidden="true"></i>
                                            Edit
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" title="Bootstrap Editor">
                                            <i class="fa fa-clipboard fa-1x" aria-hidden="true"></i>
                                            Posted</a>
                                    </li>
                                    <li>
                                        <a href="#" title="Frontend Editor Online">
                                            <i class="fa fa-eye fa-1x" aria-hidden="true"></i>
                                            View
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-6 col-sm-3">
                                <h6 class="text-uppercase">
                                    <b>About</b>
                                </h6>
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="#" data-toggle="modal" data-target="#alertModal">Contact Us</a>
                                    </li>
                                    <li>
                                        <a href="#" data-toggle="modal" data-target="#alertModal">Information</a>
                                    </li>
                                    <li>
                                        <a href="#" data-toggle="modal" data-target="#alertModal">Policy</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-12 col-sm-3">
                                <h6 class="text-uppercase">
                                    <b>Stay Posted</b>
                                </h6>
                                <form>
                                    <div class="form-group">
                                        <input type="text" class="form-control" title="No spam, we promise!" placeholder="Tell us your email">
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-primary" data-toggle="modal" data-target="#alertModal" type="button">Subscribe for updates</button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-12 col-sm-3 text-right">
                                <h6 class="text-uppercase">
                                    <b>Follow</b>
                                </h6>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <a rel="nofollow" href="//twitter.com/bootstrap4guide" title="Twitter">
                                            <i class="fa fa-twitter-square fa-3x" aria-hidden="true"></i>
                                        </a>&nbsp;
                                    </li>
                                    <li class="list-inline-item">
                                        <a rel="nofollow" href="//twitter.com/bootstrap4guide" title="Facebook">
                                            <i class="fa fa-facebook-official fa-3x" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <br>
                        <span class="pull-right text-muted small">
                            <a href="/home">
                                <i>My team</i>
                            </a>
                            ©2017</span>
                    </div>
                </footer>
            </div>
        </div>
        <%= yield :js %>
    </body>
</html>
